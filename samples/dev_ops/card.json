{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "BranchRequest",
                            "size": "xSmall",
                            "color": "Accent"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Pull Request | contoso/ui #29233",
                            "wrap": true,
                            "size": "Small",
                            "weight": "Bolder"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "ExtraSmall"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "RFC Extended Design Tokens for UI",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder",
            "spacing": "Small"
        },
        {
            "type": "TextBlock",
            "text": "Description",
            "wrap": true,
            "size": "Small",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "This RFC outlines implementation details for an expansion of UI token system to enable better cross platforms for consistency integrated across the entire ecosystem",
            "wrap": true,
            "maxLines": 2,
            "size": "Small",
            "spacing": "ExtraSmall"
        },
        {
            "type": "ColumnSet",
            "separator": true,
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Badge",
                            "text": "Merged",
                            "style": "Accent",
                            "icon": "BranchFork",
                            "size": "Large"
                        }
                    ],
                    "spacing": "Large",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/dev_ops/assets/avatar.png",
                            "style": "Person",
                            "width": "25px",
                            "height": "25px"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Kayo Miwa wants to merge 2 commits from EdSims",
                            "wrap": true
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small"
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "Person",
                            "size": "xxSmall"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "0 Reviewers   ",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "ExtraSmall"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": " •",
                            "wrap": true,
                            "size": "Medium"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "Comment",
                            "size": "xxSmall"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "3 Comments",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "ExtraSmall"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": " •",
                            "wrap": true
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "Receipt",
                            "size": "xxSmall"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "spacing": "ExtraSmall",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "1 Files changed",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ],
            "separator": true,
            "spacing": "ExtraLarge"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "View pull request"
                }
            ],
            "spacing": "ExtraLarge"
        }
    ]
}
