{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "backgroundImage": {
                "horizontalAlignment": "Center",
                "verticalAlignment": "Center",
                "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/Athena/athena_header_upcoming_wide.png"
            },
            "minHeight": "168px",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Good morning, Suz!",
                    "wrap": true,
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "color": "Default",
                    "horizontalAlignment": "Center"
                }
            ],
            "verticalContentAlignment": "Bottom",
            "horizontalAlignment": "Center",
            "targetWidth": "Wide",
            "bleed": true
        },
        {
            "type": "Container",
            "backgroundImage": {
                "horizontalAlignment": "Center",
                "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/Athena/athena_header_upcoming_standard.png"
            },
            "minHeight": "168px",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Good morning, Suz!",
                    "wrap": true,
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center",
                    "color": "Dark"
                }
            ],
            "verticalContentAlignment": "Bottom",
            "targetWidth": "Standard",
            "bleed": true,
            "horizontalAlignment": "Center"
        },
        {
            "type": "Container",
            "backgroundImage": {
                "horizontalAlignment": "Center",
                "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/Athena/athena_header_upcoming_narrow.png"
            },
            "minHeight": "156px",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Good morning, Suz!",
                    "wrap": true,
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "Image",
                    "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/Athena/spacer.png",
                    "width": "5px",
                    "height": "5px",
                    "spacing": "ExtraSmall"
                }
            ],
            "bleed": true,
            "verticalContentAlignment": "Bottom",
            "horizontalAlignment": "Center",
            "targetWidth": "Narrow"
        },
        {
            "type": "Container",
            "targetWidth": "VeryNarrow",
            "bleed": true,
            "backgroundImage": {
                "horizontalAlignment": "Center",
                "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/Athena/athena_header_vNarrow.png"
            },
            "minHeight": "112px",
            "horizontalAlignment": "Center"
        },
        {
            "type": "TextBlock",
            "text": "Good morning, Suz!",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder",
            "targetWidth": "VeryNarrow"
        },
        {
            "type": "TextBlock",
            "text": "Good news. No urgent items this morning. You've got {count} items on the horizon—plenty of time to stay ahead.",
            "wrap": true,
            "spacing": "Small",
            "targetWidth": "AtLeast:Narrow"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "showBorder": true,
            "roundedCorners": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "0",
                    "wrap": true,
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "color": "Accent",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "URGENT ISSUES",
                    "wrap": true,
                    "spacing": "None",
                    "size": "Default",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                }
            ],
            "horizontalAlignment": "Center"
        },
        {
            "type": "Container",
            "bleed": true,
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "width": "30px",
                                    "height": "30px",
                                    "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/Athena/upNext.png"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "RichTextBlock",
                                    "inlines": [
                                        {
                                            "type": "TextRun",
                                            "text": "On the horizon "
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "<N>",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": " Bugs • "
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "<N>",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": " PRs"
                                        }
                                    ]
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "spacing": "Small"
                        }
                    ]
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.OpenUrl",
                            "title": "View My Day →",
                            "style": "positive",
                            "url": "http://msn.com"
                        }
                    ]
                }
            ]
        }
    ]
}
