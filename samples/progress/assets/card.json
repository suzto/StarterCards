{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "NextGen App Engineering",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Project status update",
            "wrap": true,
            "size": "Small",
            "weight": "Bolder",
            "spacing": "None"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "spacing": "Medium",
            "roundedCorners": true,
            "showBorder": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Current phase: ",
                                    "wrap": true,
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Icon",
                                    "name": "Code",
                                    "size": "xSmall",
                                    "style": "Filled"
                                }
                            ],
                            "spacing": "ExtraSmall"
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Development",
                                    "wrap": true,
                                    "weight": "Bolder"
                                }
                            ],
                            "spacing": "ExtraSmall"
                        }
                    ]
                },
                {
                    "type": "Image",
                    "url": "https://raw.githubusercontent.com/suzto/StarterCards/refs/heads/main/samples/progress/assets/ProgressBar.png",
                    "spacing": "Small"
                },
                {
                    "type": "TextBlock",
                    "text": "75% complete",
                    "wrap": true,
                    "weight": "Bolder",
                    "color": "Good",
                    "spacing": "ExtraSmall",
                    "size": "Small"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Key milestones",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder",
            "spacing": "Large"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": " • Design phase:",
                            "wrap": true,
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "CheckmarkCircle",
                            "size": "xSmall",
                            "style": "Filled",
                            "color": "Good"
                        }
                    ],
                    "spacing": "ExtraSmall"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Complete",
                            "wrap": true,
                            "color": "Good"
                        }
                    ],
                    "spacing": "ExtraSmall"
                }
            ],
            "spacing": "Small"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": " • Development phase:",
                            "wrap": true,
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "In progress",
                            "wrap": true
                        }
                    ],
                    "spacing": "ExtraSmall"
                }
            ],
            "spacing": "ExtraSmall"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "• Testing phase:",
                            "wrap": true,
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Upcoming",
                            "wrap": true
                        }
                    ],
                    "spacing": "ExtraSmall"
                }
            ],
            "spacing": "ExtraSmall"
        }
    ]
}
